{
  "name": "shiva",
  "version": "0.0.0",
  "description": "The god of EC2 instance creation and destruction",
  "main": "index.js",
  "scripts": {
    "lint": "jshint index.js lib/",
    "test": "NODE_PATH=./lib NODE_ENV=test lab -v -c -a code test/unit test/functional",
    "unit": "NODE_PATH=./lib NODE_ENV=test lab -v -c -a code test/unit",
    "functional": "NODE_PATH=./lib NODE_ENV=test lab -v -a code test/functional",
    "integration": "NODE_PATH=./lib NODE_ENV=integration lab -m 90000 -v -a code test/integration",
    "init-db": "createuser -s -d shiva && createdb shiva && createdb shiva-test",
    "migrate": "knex migrate:latest",
    "migrate-test": "NODE_ENV=test knex migrate:latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeNow/shiva.git"
  },
  "author": "Ryan Sandor Richards <ryan@runnable.com> (http://www.runnable.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodeNow/shiva/issues"
  },
  "jshintConfig": {
    "node": true,
    "curly": true
  },
  "homepage": "https://github.com/CodeNow/shiva",
  "devDependencies": {
    "code": "^1.4.1",
    "jshint": "^2.8.0",
    "lab": "^5.14.0",
    "sinon": "^1.15.4",
    "uuid": "^2.0.1"
  },
  "dependencies": {
    "101": "^1.0.0",
    "aws-sdk": "^2.1.43",
    "bluebird": "^2.9.34",
    "bunyan": "^1.4.0",
    "debug": "^2.2.0",
    "error-cat": "^1.3.4",
    "knex": "^0.8.6",
    "loadenv": "^1.1.0",
    "pg": "^4.4.0"
  }
}
